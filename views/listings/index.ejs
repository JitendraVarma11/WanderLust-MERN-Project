<% layout("./layouts/boilerplate") %>
<body>
  <div class="filters">
    <a href="/listings/searchByCategory/trending">
      <div class="filter">
        <div><i class="fa fa-solid fa-fire"></i></div>
        <p>Trending</p>
      </div>
    </a>
    <a href="/listings/searchByCategory/room">
      <div class="filter">
        <div><i class="fa fa-solid fa-bed"></i></div>
        <p>Room</p>
      </div>
    </a>

    <a href="/listings/searchByCategory/iconic-city">
      <div class="filter">
        <div><i class="fa fa-solid fa-mountain-city"></i></div>
        <p>Iconic city</p>
      </div>
    </a>

    <a href="/listings/searchByCategory/castle">
      <div class="filter">
        <div><i class="fa fa-solid fa-fort-awesome"></i></div>
        <p>Castle</p>
      </div>
    </a>

    <a href="/listings/searchByCategory/amazing-pool">
      <div class="filter">
        <div><i class="fa fa-solid fa-person-swimming"></i></div>
        <p>Pool</p>
      </div>
    </a>

    <a href="/listings/searchByCategory/camping">
      <div class="filter">
        <div><i class="fa fa-solid fa-campground"></i></div>
        <p>Camping</p>
      </div>
    </a>

    <a href="/listings/searchByCategory/farm">
      <div class="filter">
        <div><i class="fa fa-solid fa-cow"></i></div>
        <p>Farm</p>
      </div>
    </a>

    <a href="/listings/searchByCategory/arctic">
      <div class="filter">
        <div><i class="fa fa-solid fa-snowflake"></i></div>
        <p>Arctic</p>
      </div>
    </a>

    <a href="/listings/searchByCategory/domes">
      <div class="filter">
        <div><i class="fa fa-solid fa-igloo"></i></div>
        <p>Domes</p>
      </div>
    </a>

    <a href="/listings/searchByCategory/boats">
      <div class="filter">
        <div><i class="fa fa-solid fa-ship"></i></div>
        <p>Boats</p>
      </div>
    </a>

    <div class="tax-toggle tax">
      <div class="form-check-reverse form-switch">
        <input
          type="checkbox"
          class="form-check-input"
          role="switch"
          id="flexSwitchCheckDefault"
        />
        <label for="flexSwitchCheckDefault" class="form-check-label"
          >Display total after taxes</label
        >
      </div>
    </div>
  </div>
  <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1">
    <% for(let listing of alllistings){ %>
    <a href="/listings/<%= listing._id %>" class="listing-link">
      <div class="card listing-card">
        <img
          class="card-img-top"
          src="<%= listing.image.url %>"
          style="height: 20rem"
          alt="listing image"
        />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %></b><br />
            &#8377; <%= listing.price.toLocaleString("en-IN") %>/night
            <i class="tax-info"> &nbsp; &nbsp; +18% GST</i>
          </p>
        </div>
      </div>
    </a>
    <% } %>
  </div>
</body>
